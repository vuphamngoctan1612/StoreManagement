<Window x:Class="StoreManagement.Views.fSignUp"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StoreManagement.Views"
        mc:Ignorable="d"
        Title="fSignUp" 
        Height="700" 
        Width="800" 
        WindowStyle="None" 
        AllowsTransparency="True" 
        Background="Transparent" 
        WindowStartupLocation="CenterScreen">
    <Border CornerRadius="30" 
            Background="#C9FCE5EC" 
            BorderThickness="0">
        <Border.BorderBrush>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFEC74E7" Offset="1"/>
                    <GradientStop Color="#EAF97298" Offset="1"/>
                </LinearGradientBrush>
        </Border.BorderBrush>
        <Grid >
            <TextBox x:Name="txtUser" 
                     Style="{StaticResource MaterialDesignTextBox}" 
                     Height="66" 
                     Width="500" 
                     Background="White" 
                     materialDesign:TextFieldAssist.TextFieldCornerRadius="38" 
                     Margin="154,238,0,0" 
                     HorizontalContentAlignment="Center" 
                     VerticalAlignment="Top" 
                     HorizontalAlignment="Left"
                     FontFamily="Segoe UI" 
                     FontSize="22" 
                     Text="Username" 
                     VerticalContentAlignment="Center" >
            </TextBox>
            <TextBox x:Name="txtPassword" 
                     Style="{StaticResource MaterialDesignTextBox}" 
                     Height="66" Width="500" Background="White" 
                     materialDesign:TextFieldAssist.TextFieldCornerRadius="38" 
                     Margin="154,350,0,0" 
                     HorizontalContentAlignment="Center" 
                     VerticalAlignment="Top" 
                     HorizontalAlignment="Left"
                     FontFamily="Segoe UI" 
                     FontSize="22" 
                     Text="Password" 
                     VerticalContentAlignment="Center" >
            </TextBox>
            <TextBox x:Name="txtRePassword" 
                     Style="{StaticResource MaterialDesignTextBox}"
                     Height="66" 
                     Width="500" 
                     Background="White" 
                     materialDesign:TextFieldAssist.TextFieldCornerRadius="38" 
                     Margin="154,458,0,0"
                     HorizontalContentAlignment="Center" 
                     VerticalAlignment="Top" 
                     HorizontalAlignment="Left"
                     FontFamily="Segoe UI" 
                     FontSize="22" 
                     Text="Enter your password again" 
                     VerticalContentAlignment="Center" >
            </TextBox>
            <Button x:Name="btSignUp" 
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Height="66" 
                    Width="374" 
                    materialDesign:ButtonAssist.CornerRadius="38"
                    ToolTip="MaterialDesignRaisedButton with Round Corners"
                    Margin="221,563,0,0" 
                    HorizontalContentAlignment="Center" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1"
                                         StartPoint="0.5,0">
                        <GradientStop Color="#FFEC74E7"
                                      Offset="0"/>
                        <GradientStop Color="#EAF97298"
                                      Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
                <TextBlock Text="Get started" 
                           FontFamily="Segoe UI" 
                           FontSize="22"
                           Width="110" 
                           Height="40"/>
            </Button>
            <CheckBox x:Name="cbRemember" 
                      Margin ="487,535,0,0" 
                      HorizontalAlignment="Left" 
                      VerticalAlignment="Top"
                      VerticalContentAlignment="Center"
                      HorizontalContentAlignment="Center" 
                      RenderTransformOrigin="0.5,0.5">
                      <CheckBox.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleX="2"
                                            ScaleY="2"/>
                        </TransformGroup>
                      </CheckBox.RenderTransform>
                      <CheckBox.Background>
                        <LinearGradientBrush EndPoint="0.5,1" 
                                             StartPoint="0.5,0">
                            <GradientStop Color="White"/>
                        </LinearGradientBrush>
                      </CheckBox.Background>
            </CheckBox>
            <TextBlock Style="{StaticResource MaterialDesignHeadline4TextBlock}" 
                       Text="I have read" 
                       Height="33" 
                       Width="100" 
                       Margin="200,530,0,0" 
                       VerticalAlignment="Top" 
                       HorizontalAlignment="Left" 
                       TextAlignment="Left"
                       FontFamily="Segoe UI" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       TextDecorations="{x:Null}">
                <TextBlock.Foreground>
                    <LinearGradientBrush EndPoint="0.5,1" 
                                         MappingMode="RelativeToBoundingBox" 
                                         StartPoint="0.5,0">
                        <GradientStop Color="#7D78A2"/>
                    </LinearGradientBrush>
                </TextBlock.Foreground>
            </TextBlock>
            <TextBlock Style="{StaticResource MaterialDesignHeadline4TextBlock}" 
                       Text="The Privacy Policy" 
                       Height="33" 
                       Width="170" 
                       Margin="300,530,0,0" 
                       VerticalAlignment="Top" 
                       HorizontalAlignment="Left" 
                       TextAlignment="Left"
                       FontFamily="Segoe UI" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       TextDecorations="Underline"
                   >
                <TextBlock.Foreground>
                    <LinearGradientBrush EndPoint="0.5,1" 
                                         MappingMode="RelativeToBoundingBox" 
                                         StartPoint="0.5,0">
                        <GradientStop Color="#7D78A2"/>
                    </LinearGradientBrush>
                </TextBlock.Foreground>
            </TextBlock>
            <Button x:Name="btBack"
                    Style="{StaticResource MaterialDesignIconButton}"
                    ToolTip="MaterialDesignIconButton"
                    Background="White" 
                    Margin="35,35,0,0" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top" >
                    <materialDesign:PackIcon Kind="ArrowLeft"  />
            </Button>
            <TextBlock Style="{StaticResource MaterialDesignHeadline4TextBlock}" 
                       Text="SIGN UP!" 
                       Height="90" 
                       Width="310" 
                       Margin="233,80,0,0" 
                       VerticalAlignment="Top" 
                       HorizontalAlignment="Left" 
                       TextAlignment="Center"
                       FontFamily="Segoe UI" 
                       FontSize="65" 
                       FontWeight="Bold">
                <TextBlock.Foreground>
                    <LinearGradientBrush EndPoint="0.5,1" 
                                         MappingMode="RelativeToBoundingBox" 
                                         StartPoint="0.5,0">
                        <GradientStop Color="#F97299"/>
                    </LinearGradientBrush>
                </TextBlock.Foreground>
            </TextBlock>
            <TextBlock Style="{StaticResource MaterialDesignHeadline4TextBlock}" 
                       Text="NOW" 
                       Height="30" 
                       Width="56" 
                       Margin="544,91,0,0" 
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left" 
                       TextAlignment="Center"
                       FontFamily="Segoe UI" 
                       FontSize="20" 
                       FontWeight="Bold">
                <TextBlock.Foreground>
                    <LinearGradientBrush EndPoint="0.5,1"
                                         MappingMode="RelativeToBoundingBox" 
                                         StartPoint="0.5,0">
                        <GradientStop Color="#F97299"/>
                    </LinearGradientBrush>
                </TextBlock.Foreground>
            </TextBlock>
        </Grid>
    </Border>
</Window>
