<UserControl x:Class="StoreManagement.Resources.UserControls.InvoiceUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StoreManagement.Resources.UserControls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
            xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             x:Name="displayInvoiceUC"
             mc:Ignorable="d" 
             d:DesignHeight="45" d:DesignWidth="1070"
             Background="#FFFFFF"
             Padding="1"
             DataContext="{StaticResource BillVM}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="1"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"></ColumnDefinition>
                <ColumnDefinition Width="220"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="60"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid>
                <TextBlock
                x:Name="InvoiceID"
                Foreground="#504D85"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Text="1"
                FontSize="22"></TextBlock>
            </Grid>
            <Grid
                Grid.Column="1">
                <TextBlock
                x:Name="AgencyName"
                Foreground="#504D85"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Text="Mì"
                FontSize="22"></TextBlock>
            </Grid>
            <Grid
                Grid.Column="2">
                <TextBlock
                x:Name="CheckOut"
                Foreground="#504D85"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Text="Gói"
                FontSize="22"></TextBlock>
            </Grid>
            <Grid
                Grid.Column="3">
                <TextBlock
                x:Name="Debt"
                Foreground="#504D85"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Text="10"
                FontSize="22"></TextBlock>
            </Grid>
            <Grid 
                Grid.Column="4">
                <Button
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    x:Name="btOpen"
                    x:Uid="1"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    Foreground="#504D85"
                    Width="60"
                    Height="45"
                    Command="{Binding OpenInvoiceWindowCommand}"
                    CommandParameter="{Binding ElementName=displayInvoiceUC}">
                    <materialDesign:PackIcon
                        Kind="BookOpenVariant"
                        Width="24"
                        Height="24"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"/>
                </Button>
            </Grid>
        </Grid>
        <Grid Grid.Row="1"
            Width="1070"
            Background="#F2F2F2">
        </Grid>
    </Grid>
</UserControl>
